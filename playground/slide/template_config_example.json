{
  "_comment": "PPT模板配置文件 - 用于指定每页的类型和特征",
  "_description": "如果系统无法自动识别模板页面类型，可以手动配置此文件",
  
  "template_name": "商业演示模板",
  "template_version": "1.0",
  "total_pages": 8,
  
  "page_types": {
    "cover": "封面页",
    "toc": "目录页", 
    "chapter": "章节标题页",
    "content": "内容页",
    "data": "数据展示页",
    "conclusion": "结论页",
    "contact": "联系方式页"
  },
  
  "pages": [
    {
      "slide_index": 0,
      "page_type": "cover",
      "description": "公司Logo + 产品标题 + 副标题",
      "placeholders": [
        "{{@company.logo}}",
        "{{page[0].title}}",
        "{{page[0].subtitle}}"
      ],
      "style_features": {
        "shape_count": 3,
        "has_table": false,
        "has_images": true,
        "layout": "center_aligned"
      }
    },
    {
      "slide_index": 1,
      "page_type": "toc",
      "description": "目录页面，显示PPT结构",
      "placeholders": [
        "{{page[1].title}}",
        "{{page[1].sections}}"
      ],
      "style_features": {
        "shape_count": 2,
        "has_table": false,
        "has_images": false,
        "layout": "list_layout"
      }
    },
    {
      "slide_index": 2,
      "page_type": "content",
      "description": "标准内容页 - 标题 + 多个内容块",
      "placeholders": [
        "{{page[2].title}}",
        "{{page[2].sections[0].title}}",
        "{{page[2].sections[0].content}}",
        "{{page[2].sections[1].title}}",
        "{{page[2].sections[1].content}}"
      ],
      "style_features": {
        "shape_count": 5,
        "has_table": false,
        "has_images": false,
        "layout": "two_column"
      }
    },
    {
      "slide_index": 3,
      "page_type": "data",
      "description": "数据展示页 - 标题 + 表格 + 图表",
      "placeholders": [
        "{{page[3].title}}",
        "{{#page[3].table}}",
        "{{@page[3].chart}}"
      ],
      "style_features": {
        "shape_count": 3,
        "has_table": true,
        "has_images": true,
        "layout": "data_focused"
      }
    },
    {
      "slide_index": 4,
      "page_type": "content",
      "description": "内容页变体 - 标题 + 主要内容 + 配图",
      "placeholders": [
        "{{page[4].title}}",
        "{{page[4].content}}",
        "{{@page[4].image}}"
      ],
      "style_features": {
        "shape_count": 3,
        "has_table": false,
        "has_images": true,
        "layout": "content_with_image"
      }
    },
    {
      "slide_index": 5,
      "page_type": "data",
      "description": "简化数据页 - 标题 + 表格",
      "placeholders": [
        "{{page[5].title}}",
        "{{#page[5].table}}"
      ],
      "style_features": {
        "shape_count": 2,
        "has_table": true,
        "has_images": false,
        "layout": "table_only"
      }
    },
    {
      "slide_index": 6,
      "page_type": "conclusion",
      "description": "结论页 - 总结内容",
      "placeholders": [
        "{{page[6].title}}",
        "{{page[6].content}}"
      ],
      "style_features": {
        "shape_count": 2,
        "has_table": false,
        "has_images": false,
        "layout": "simple_text"
      }
    },
    {
      "slide_index": 7,
      "page_type": "contact",
      "description": "联系方式页 - 公司信息",
      "placeholders": [
        "{{page[7].title}}",
        "{{company.name}}",
        "{{company.phone}}",
        "{{company.email}}"
      ],
      "style_features": {
        "shape_count": 4,
        "has_table": false,
        "has_images": false,
        "layout": "contact_info"
      }
    }
  ],
  
  "matching_rules": {
    "content_keywords": {
      "cover": ["介绍", "欢迎", "title", "logo"],
      "toc": ["目录", "contents", "agenda", "outline"],
      "chapter": ["章节", "chapter", "part", "section"],
      "data": ["数据", "分析", "统计", "表格", "图表"],
      "conclusion": ["结论", "总结", "谢谢", "thank"],
      "contact": ["联系", "contact", "电话", "邮箱"]
    },
    
    "complexity_matching": {
      "simple": ["cover", "conclusion", "contact"],
      "medium": ["toc", "chapter"],
      "complex": ["content", "data"]
    }
  },
  
  "ordering_preferences": {
    "fixed_positions": {
      "cover": 1,
      "toc": 2,
      "contact": -1,
      "conclusion": -2
    },
    "flexible_sections": ["chapter", "content", "data"],
    "chapter_grouping": true,
    "data_after_content": true
  }
}